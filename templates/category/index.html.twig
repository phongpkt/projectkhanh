{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('category_add') }}">
        <img src = "{{ asset('button/add.png') }}" width="80" height="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>
                        <a class="text-decoration-none" href= "{{ path('category_detail', {'id' : category.id }) }}">
                            {{ category.name }}
                        </a>
                    </td>
                    <td>
                        <a href = "{{ path('category_edit', {'id' : category.id }) }}">
                            <img src = "{{ asset('button/edit.png') }}" width="50" height="50" >
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('category_delete', {'id' : category.id }) }}"
                        onclick = "return confirm('Do you want to delete this category ?')">
                            <img src = "{{ asset('button/delete.png') }}" width="50" height="50" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
