{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 mt-3 mb-3 text-center">
    <a href = "{{ path('vendor_add') }}">
        <img src = "{{ asset('button/add.jpg') }}" width="80" heigh="60" >
    </a>
    <table class="table table-responsive-md mt-3">
        <thead>
            <tr>
                <th>Vendor ID</th>
                <th>Vendor Name</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {% for vendor in vendors %}
                <tr>
                    <td>{{ vendor.id }}</td>
                    <td>
                        <a class="text-decoration-none" href= "{{ path('vendor_detail', {'id' : vendor.id }) }}">
                            {{ vendor.name }}
                        </a>
                    </td>
                    <td>
                        <a href = "{{ path('vendor_edit', {'id' : vendor.id }) }}">
                            <img src = "{{ asset('button/edit.png') }}" width="50" height="50" >
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('vendor_delete', {'id' : vendor.id }) }}"
                        onclick = "return confirm('Do you want to delete this author ?')">
                            <img src = "{{ asset('button/delete.png') }}" width="50" height="50" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
